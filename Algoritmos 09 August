int Karim(int a, int i)
{
	while (a>0)
	{
			a=a/10;
			i++;
	}
cout<< "Cantidad de digitos "<< i <<endl;
return(i);
}

int Modulo(int n)
{
	int d,a=0;
	while(n>0)
	{
		d=n%10;
		a=a+d;
		n=n/10
	}
	return (a);
}
