int Contar(int n);
int Modulo(int n);
int Invertir(int n);
bool Verificar(int n);
int SumarPrimos(int n);
int Concatenar(int n, int b);

void main ()
{
	system("color 3A");
	int n, i=0, x, opcion, n2, r;
	do{
		if ((n<0) || (n2<0))
		{
			cout<<"Su numero es negativo, debe ingresar un numero positivo para continuar"<<endl;
			system("pause>null");
		}
	system ("cls");
	cout<<"Ingrese un numero Positivo"<<endl;
	cin>>n;
	cout<<"Ingrese otro numero positivo"<<endl;
	cin>>n2;
	}while ((n<0)||(n2<0));
	do{
	system("cls");
	cout<<"- - - - Menu - - - -"<<endl;
	cout<<"1. Cantidad de digitos que su numero posee"<<endl;
	cout<<"2. Numeros que contiene su numero sumados"<<endl;
	cout<<"3. Invertir numero ingresado"<<endl;
	cout<<"4. Sumar numeros primos"<<endl;
	cout<<"5. Concatenar dos numeros"<<endl;
	cout<<"6. Salir"<<endl;
	cin>>opcion;
		switch (opcion)
	{
		case 1:{
			Contar(n);
				}break;
		case 2:{
			Modulo(n);
			   }break;
		case 3:{
			Invertir (n);
			   }break;
		case 4:{
			Verificar (n);
			SumarPrimos(n);
			   }break;
		case 5:{
			r=Concatenar(n,n2);
			cout<<"El resultado es: "<<r<<endl;
			   }break;
		case 6:{ 
			cout<<"Ha decidido Salir"<<endl;
			cout<<" "<<endl;
			cout<<"Hasta Luego"<<endl;
			   }break;
		default: {
			cout<<"Opcion Invalida"<<endl;
				 }break;
	 }
	}while (opcion!=6);

	getch();
}

int Contar(int n)
{
	int i=0;
	while (n>0)
	{
			n=n/10;
			i++;
	}
	cout<< "Cantidad de digitos "<< i <<endl;
	system("pause>null");
	return(i);
}

int Modulo(int n)
{
	int d,a=0;
	while(n>0)
	{
		d=n%10;
		a=a+d;
		n=n/10;
	}
	return (a);
}

int Invertir(int n)
{
	int j, h=0;
	while(n>0)
	{
	j=n%10;
	h=(h*10)+j;
	n=n/10;
	}
	return (h);
}

bool Verificar(int n)
{
	int i;
	bool k=true;
	for(i=2; i<n; i++)
	{
		if(n%i==0)
		{
			k=false;
		}
	}
	return (k);
}

int SumarPrimos(int n)
{
	int d, s=0;
		while(n>0)
		{
			d=n%10;
			if(Verificar(d) ==true)
			{
				s=s+d;
			}
			n=n/10;
		}
		return (s);
}
int Concatenar(int n, int b)
{
	return(n*powf(10,Contar(b))+b);
}
	
